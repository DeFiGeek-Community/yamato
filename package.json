{
  "name": "@defigeek/yamato",
  "version": "1.0.0",
  "description": "A stablecoin lender with efficient game-theoretic design.",
  "homepage": "https://github.com/defigeek/yamato#readme",
  "bugs": {
    "url": "https://github.com/defigeek/yamato/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defigeek/yamato.git"
  },
  "license": "MIT",
  "author": "",
  "scripts": {
    "analyze": "rm -f slither-output.json && slither --filter-paths node_modules --json slither-output.json .",
    "analyze:resultRet": "jq -r '.results.detectors|map(select(\"High\"==.impact)|.elements|length)|add' slither-output.json",
    "analyze:summary": "rm -f slither-output.json && slither --filter-paths node_modules --print human-summary --json slither-output.json .",
    "compile": "hardhat compile",
    "compile?": "[[ ! $(git diff contracts) ]] || hardhat compile",
    "deploy:testnet": "hardhat deploy --network rinkeby",
    "format": "sort-package-json && prettier --write .",
    "lint:check": "solhint 'contracts/**/*.sol' && prettier --check .",
    "test": "hardhat test",
    "verify:testnet": "hardhat verify --network rinkeby"
  },
  "dependencies": {
    "@openzeppelin/contracts": "v4.3.0-rc.0",
    "child-process-promise": "^2.2.1",
    "ethers": "^5.4.5",
    "openzeppelin-solidity": "^4.1.0",
    "optimism": "0xMotoko/optimism#hotfix/hardhat-v2.4.x",
    "prb-math": "^2.2.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@eth-optimism/core-utils": "^0.5.3",
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.5",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testdeck/mocha": "^0.1.2",
    "@typechain/ethers-v5": "^7.0.0",
    "@typechain/hardhat": "^2.0.1",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.6.4",
    "chai": "^4.3.4",
    "chalk": "^4.1.1",
    "dotenv": "^8.6.0",
    "ethereum-waffle": "^3.4.0",
    "hardhat": "^2.4.3",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "0xMotoko/hardhat-deploy-ethers#main",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "jasmine": "^3.7.0",
    "solc": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "sort-package-json": "^1.52.0",
    "ts-node": "^9.1.1",
    "ts-test-decorators": "0.0.6",
    "tslib": "^2.0.1",
    "typechain": "^5.0.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=14"
  }
}
