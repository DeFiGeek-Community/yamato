{
  "name": "@defigeek/yamato",
  "version": "1.0.0",
  "description": "A stablecoin lender with efficient game-theoretic design.",
  "homepage": "https://github.com/defigeek/yamato#readme",
  "bugs": {
    "url": "https://github.com/defigeek/yamato/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/defigeek/yamato.git"
  },
  "license": "MIT",
  "author": "",
  "scripts": {
    "analyze": "rm -f slither-output.json && slither --filter-paths node_modules --json slither-output.json .",
    "analyze:resultRet": "jq -r '.results.detectors|map(select(\"High\"==.impact)|.elements|length)|add' slither-output.json",
    "analyze:summary": "rm -f slither-output.json && slither --filter-paths node_modules --print human-summary --json slither-output.json .",
    "compile": "hardhat compile",
    "compile?": "[[ ! $(git diff contracts) ]] || hardhat compile",
    "deploy:goerli": "hardhat deploy --network goerli",
    "deploy:goerli:reset": "rm -f ./deployments/goerli/*",
    "downgrade:goerli:redeemerDoS": "YMT_CLI_MODE=downgrade hardhat run upgrade/batches/commit79597f-202203280247.ts --network goerli",
    "format": "sort-package-json && prettier --write .",
    "postinstall": "patch-package",
    "lint:check": "solhint 'contracts/**/*.sol' && prettier --check .",
    "test": "npm run test:reset && NODE_OPTIONS=--max_old_space_size=4096 hardhat test",
    "test:integration": "hardhat run src/integrity.ts",
    "test:reset": "rm -f ./deployments/localnet/*",
    "upgrade:goerli:redeemerDoS": "YMT_CLI_MODE=upgrade hardhat run upgrade/batches/commit79597f-202203280247.ts --network goerli",
    "verify:goerli": "hardhat verify --network goerli",
    "verify:goerli:all": "hardhat run src/verifyGoerliContracts.ts",
    "verify:goerli:showURL": "ts-node src/showGoerliProxyVerificationURLs.ts"
  },
  "dependencies": {
    "@openzeppelin/contracts": "v4.3.0-rc.0",
    "@openzeppelin/hardhat-defender": "^1.8.1",
    "child-process-promise": "^2.2.1",
    "hardhat-defender": "^1.0.1",
    "openzeppelin-solidity": "^4.1.0",
    "prb-math": "^2.2.0",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18"
  },
  "devDependencies": {
    "@defi-wonderland/smock": "^2.0.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomicfoundation/hardhat-verify": "^1.0.0",
    "@nomiclabs/ethereumjs-vm": "^4.2.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "@openzeppelin/contracts-upgradeable": "^4.3.2",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@openzeppelin/test-helpers": "^0.5.11",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@testdeck/mocha": "^0.1.2",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^14.6.4",
    "chalk": "^4.1.2",
    "dotenv": "^8.6.0",
    "hardhat": "^2.4.3",
    "hardhat-abi-exporter": "^2.2.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.0",
    "hardhat-deploy-ethers": "0xMotoko/hardhat-deploy-ethers#main",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-tracer": "^1.0.0-alpha.6",
    "jasmine": "^3.7.0",
    "patch-package": "^6.4.7",
    "solc": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "0.0.5",
    "solidity-coverage": "^0.8.1",
    "sort-package-json": "^1.52.0",
    "ts-node": "^9.1.1",
    "ts-test-decorators": "0.0.6",
    "tslib": "^2.0.1",
    "typechain": "^8.1.0",
    "typescript": "^4.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "postinstall": "patch-package"
}
